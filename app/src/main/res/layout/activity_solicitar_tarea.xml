<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_solicitar_tarea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.Solicitar_Tarea"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="#FAF9E8">
    <TextView
        android:id="@+id/txt_titulo"
        android:text="Solicitud de Limpieza / Mantenimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#C11C1C"
        android:layout_marginBottom="20dp"/>
    <!-- Por bloques 1ro tipo-->
    <RadioGroup
        android:id="@+id/radioGroupTarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_limpieza"
            android:text="Limpieza"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rb_mmto"
            android:text="Mantenimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>


    <!-- Número habitación -->
    <TextView
        android:text="Número de habitación (100–599):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/etx_numero_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ejemplo: 112"
        android:inputType="number"/>
    <!-- Zona -->
    <TextView
        android:id="@+id/txt_choose_zona"
        android:text="Zona:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>
    <AutoCompleteTextView
        android:id="@+id/autoZona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:hint="Salon/Baño"/>
    <!-- Pasillo -->
    <TextView
        android:text="Pasillo (opcional):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>
    <AutoCompleteTextView
        android:id="@+id/autoPasillo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:hint="Seleccione pasillo"/>
    <Button
        android:id="@+id/btn_enviar_solicitud"
        android:text="ENVIAR SOLICITUD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFF"/>

    <Button
        android:id="@+id/btn_volver"
        android:text="VOLVER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#0D47A1"
        android:textColor="#FFF"/>



</LinearLayout>