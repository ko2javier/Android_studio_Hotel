<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_recepcionista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5DC"
    tools:context=".actividades.Presentacion">



    <TextView
        android:id="@+id/TextView_recep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Pantalla Menu Recepcionista"
        android:textSize="20sp"
        android:textColor="#C32626"
        />

    <Button
        android:id="@+id/btn_consultar_editar_perfil_recp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#9BD973"
        android:layout_marginTop="50dp"
        android:text="Consultar/Editar Perfil"
        android:padding="5dp"

        />
    <Button
        android:id="@+id/btn_consultar_ocupacion_hotel_recp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#9BD973"
        android:layout_marginTop="30dp"
        android:text="Consultar Ocupación del Hotel"
        android:padding="5dp"

        />

    <Button
        android:id="@+id/btn_consultar_listado_huspedes_recp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#9BD973"
        android:layout_marginTop="30dp"
        android:text="Consultar Listado huespedes"
        android:padding="5dp"

        />

    <Button
        android:id="@+id/btn_add_reservas_hotel"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#9BD973"
        android:layout_marginTop="30dp"
        android:text="Añadir Reservas al hotel"
        android:padding="5dp"

        />

    <Button
        android:id="@+id/btn_gestionar_check_in_out"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#9BD973"
        android:layout_marginTop="30dp"
        android:text=" Realizar Entradas y Salidas"
        android:padding="5dp"

        />
    


    <Button
        android:id="@+id/btn_consultar_Encuestas"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#9BD973"
        android:layout_marginTop="30dp"
        android:text="Consultar Encuestas"
        android:padding="5dp"

        />
    <Button
        android:id="@+id/boton_cerrar_sesion"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#F8C537"
        android:text="Cerrar Sesión "
        android:textStyle="bold"
        android:padding="3dp"

        />



</LinearLayout>