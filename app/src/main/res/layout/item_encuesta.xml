<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_encuesta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFF8E1"
    android:padding="10dp"
    android:layout_marginBottom="12dp"
    android:elevation="3dp">

    <TextView
        android:id="@+id/txt_categoria_encuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"/>

    <RatingBar
        android:id="@+id/rating_encuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:isIndicator="true"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/txt_promedio_encuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Promedio: 4.5"
        android:textSize="15sp"
        android:textColor="#444"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/txt_cant_encuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 encuestas registradas"
        android:textSize="12sp"
        android:textColor="#777"
        android:gravity="center_horizontal"
        android:layout_marginTop="2dp"/>
</LinearLayout>
