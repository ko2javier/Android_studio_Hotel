<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_gestion_tareas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FAF9E8"
    tools:context=".actividades.GestionTareasActivity">

    <!--  Título dinámico -->
    <TextView
        android:id="@+id/txt_titulo_tareas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión de Tareas"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textColor="#B22222"
        android:gravity="center"
        android:layout_marginBottom="15dp"/>


        <ListView
        android:id="@+id/listview_tareas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="8dp"
        android:padding="4dp"
        android:scrollbars="vertical"
        android:background="#FFFFFF"/>


    <Button
        android:id="@+id/btn_volver_tareas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VOLVER"
        android:backgroundTint="#0D47A1"
        android:textColor="#FFF"
        android:layout_marginTop="10dp"/>

</LinearLayout>
