<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/consultar_estado_reservas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consultar_Estado_Reservas"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5DC">

    <TextView
        android:id="@+id/TextView_huesped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Pantalla Consultar Reservas"
        android:textSize="20sp"
        android:textColor="#C32626"
        />
    <TextView
        android:id="@+id/txt_reserva_cancelada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        android:text="Reserva #1 | Habitación Doble | Fecha: 12/10/2025 | Estado: Cancelada"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/txt_reserva_cancelada2"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:text="Reserva #1 | Habitación Doble | Fecha: 09/10/2025 | Estado: Cancelada"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="20dp"
        />
    <!-- Añadios reservas dinamicas !! -->
    <LinearLayout
        android:id="@+id/layout_reservas_dinamicas"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btn_volver_consultar_reservas"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:text="VOLVER"
        android:backgroundTint="#0D47A1"
        android:textColor="#FFFFFF" />

</LinearLayout>