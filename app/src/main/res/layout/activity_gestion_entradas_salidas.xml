<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.GestionEntradasSalidasActivity"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="#FAF9E8">

    <!--  Título principal -->
    <TextView
        android:id="@+id/txt_titulo"
        android:text="Gestión de Entradas / Salidas"
        android:textColor="#B22222"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <!--  Selección de operación -->
    <TextView
        android:id="@+id/txt_choose_operacion"
        android:text="Seleccione la operación:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"/>

    <RadioGroup
        android:id="@+id/radio_group_operacion"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/rb_check_in"
            android:text="Check-In"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rb_check_out"
            android:text="Check-Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"/>
    </RadioGroup>

    <!--  Bloque: formulario de registro (para Check-In sin reserva) -->
    <LinearLayout
        android:id="@+id/linear_form_checkin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/txt_datos_checkin"
            android:text="Datos del huésped:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_nombre_huesped"
            android:hint="Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_apellidos_huesped"
            android:hint="Apellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/et_telefono_huesped"
            android:hint="Teléfono"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/et_habitacion_huesped"
            android:hint="Habitación"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btn_realizar_check_in"
            android:text="REALIZAR CHECK-IN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFF"/>
    </LinearLayout>

    <!--  Bloque: búsqueda y resultado (para Check-Out) -->
    <LinearLayout
        android:id="@+id/linear_buscar_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_buscar_checkout"
            android:text="Buscar huésped:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_nombre_buscar"
            android:hint="Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_apellidos_buscar"
            android:hint="Apellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btn_buscar_checkout"
            android:text="BUSCAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFF"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_realizar_check_out"
            android:text="REALIZAR CHECK-OUT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B71C1C"
            android:textColor="#FFF"
            android:layout_marginTop="15dp"
            android:visibility="gone"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_volver"
        android:text="VOLVER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0D47A1"
        android:textColor="#FFF"/>

</LinearLayout>
