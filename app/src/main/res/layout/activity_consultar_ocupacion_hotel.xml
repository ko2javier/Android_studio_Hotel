<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/consultar_ocupacion_hotel"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9E8"
    android:padding="50dp"
    >

    <TextView
        android:id="@+id/txt_titulo_pantalla_ocupacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pantall OcupaciÃ³n del Hotel"

        android:textStyle="bold"
        android:textColor="#AB1F1F"
        android:textSize="20sp"
        android:layout_marginBottom="25dp" />

    <!-- Datos Planta 1 -->
    <TextView
        android:id="@+id/txt_pt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planta 1 --> 12 libres"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txt_pt_1.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simples: 101, 102, 104\nDobles: 115, 118, 120, 121\nTriples: 198, 199"
        android:textSize="15sp"
        android:textColor="#555" />

    <!-- Datos Planta 2 -->
    <TextView
        android:id="@+id/txt_pt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planta 2 --> 10 libres"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txt_pt_2.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
