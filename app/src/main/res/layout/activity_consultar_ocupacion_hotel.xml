<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/consultar_ocupacion_hotel"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9E8"
    android:padding="50dp"
    >

    <TextView
        android:id="@+id/txt_titulo_pantalla_ocupacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disponiblidad del Hotel"
        android:textStyle="bold"
        android:textColor="#AB1F1F"
        android:textSize="20sp"
        android:layout_marginBottom="25dp" />

    <ListView
        android:id="@+id/listaPlantas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"

        />

    <TextView
    android:id="@+id/txt_ocupacion_total"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="OcupaciÃ³n total: 456 / 500 habitaciones"
    android:textColor="#2E8B57"
    android:textStyle="bold"
    android:textSize="18sp"
    android:layout_marginTop="16dp"
    android:gravity="center" />

    <Button
        android:id="@+id/btn_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#1a759f"
        android:padding="5dp"
        android:text="volver"
        android:textColor="@color/white" />

</LinearLayout>
