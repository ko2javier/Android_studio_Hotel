        android:textColor="#555" />

    <!--  Pt 3 -->
    <TextView
        android:id="@+id/txt_pt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planta 3 --> 14 libres"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txt_pt_3.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simples: 303, 305, 310\nDobles: 324, 325, 330\nTriples: 397, 399"
        android:textSize="15sp"
        android:textColor="#555" />

    <!--  Pt 4 -->
    <TextView
        android:id="@+id/txt_pt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planta 4 --> 18 libres"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txt_pt_4.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simples: 401, 403, 404, 408\nDobles: 420, 425, 430\nTriples: 496, 498, 499"
        android:textSize="15sp"
        android:textColor="#555"
        android:layout_marginBottom="10dp"/>

    <!--  Pt 5 -->
    <TextView
        android:id="@+id/txt_pt_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planta 5 --> 16 libres"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/txt_pt_5.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simples: 501, 504, 507\nDobles: 520, 525, 528, 530\nTriples: 596, 598"
        android:textSize="15sp"
        android:textColor="#555" />

    <!-- Total -->
    <TextView

        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Libres: 70 / 500 habitaciones"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#2E8B57"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btn_volver"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#1a759f"
        android:padding="5dp"
        android:text="volver"
        android:textColor="@color/white" />

</LinearLayout>
