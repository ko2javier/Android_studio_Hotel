<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_planta"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="8dp">


    <LinearLayout
        android:id="@+id/linear_encabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="6dp">

        <ImageView
            android:id="@+id/img_icono"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hotel_bg"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/txt_titulo_planta"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#AB1F1F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <TextView
        android:id="@+id/txt_leyenda"
        android:text="Disponibles / Ocupadas"
        android:textColor="#666"
        android:textSize="14sp"
        android:paddingStart="42dp"
        android:paddingBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/linear_tipos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="42dp">

        <!-- Simples -->
        <LinearLayout
            android:id="@+id/linear_simples"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_simples_label"
                android:text="Simples: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#333" />
            <TextView
                android:id="@+id/txt_simples_disponibles"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#388E3C"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/txt_separador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textSize="15sp"
                android:textColor="#000" />
            <TextView
                android:id="@+id/txt_simples_ocupadas"
                android:text="37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D32F2F"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Dobles -->
        <LinearLayout
            android:id="@+id/linear_dobles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_dobles_label"
                android:text="Dobles: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#333" />
            <TextView
                android:id="@+id/txt_dobles_disponibles"
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#388E3C"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/txt_sep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textSize="15sp"
                android:textColor="#000" />
            <TextView
                android:id="@+id/txt_dobles_ocupadas"
                android:text="46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D32F2F"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Triples -->
        <LinearLayout
            android:id="@+id/linear_triples"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_triples_label"
                android:text="Triples: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#333" />
            <TextView
                android:id="@+id/txt_triples_disponibles"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#388E3C"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/txt_separ"
                android:text=" / "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000" />
            <TextView
                android:id="@+id/txt_triples_ocupadas"
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D32F2F"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
