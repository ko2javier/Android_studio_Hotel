<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gerente_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5DC"
    tools:context=".Presentacion">



    <TextView
        android:id="@+id/TextView_gerente"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Pantalla Menu Gerente"
        android:textSize="20sp"
        android:textColor="#C32626"
        />

    <Button
        android:id="@+id/btn_consultar_editar_perfil"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#9BD973"
        android:layout_marginTop="30dp"
        android:text="Consultar/Editar Perfil"
        android:padding="5dp"

        />
    <Button
        android:id="@+id/btn_consultar_ocupacion_hotel"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#9BD973"
        android:layout_marginTop="30dp"
        android:text="Consultar Ocupacion del Hotel"
        android:padding="5dp"

        />

    <Button
        android:id="@+id/btn_consultar_listado_huspedes"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#9BD973"
        android:layout_marginTop="30dp"
        android:text="Consultar Listado huespedes"
        android:padding="5dp"

        />

    <Button
        android:id="@+id/btn_consultar_tareas_pdtes"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#9BD973"
        android:layout_marginTop="30dp"
        android:text="Consultar Tareas Pedientes"
        android:padding="5dp"

        />




    <Button
        android:id="@+id/btn_consultar_encuestas_gerente"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#9BD973"
        android:layout_marginTop="30dp"
        android:text="Consultar Encuestas"
        android:padding="5dp"

        />
    <Button
        android:id="@+id/btn_consultar_listado_empleados"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#9BD973"
        android:layout_marginTop="30dp"
        android:text="Consultar Listado empleados"
        android:padding="5dp"

        />

    <Button
        android:id="@+id/boton_cerrar_sesion"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#F8C537"
        android:text="Cerrar Sesion "
        android:textStyle="bold"
        android:padding="3dp"

        />


</LinearLayout>